<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogContainerStyle">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/ic_attention"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:fontFamily="@font/work_sans_bold"
        android:text="@string/void_item_dialog_title"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/dialog_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivIcon" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:fontFamily="@font/work_sans_regular"
        android:text="@string/void_item_dialog_subtitle"
        android:textAlignment="center"
        android:textColor="@color/dark_gray_text"
        android:textSize="@dimen/dialog_subtitle_text_size"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvItemData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:fontFamily="@font/work_sans_regular"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_gray_text"
        android:textSize="@dimen/dialog_subtitle_text_size"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <LinearLayout
        android:id="@+id/llBtContainer"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvItemData">

        <TextView
            android:id="@+id/tvNegative"
            style="@style/NegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvPositive"
            style="@style/PositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/void_item"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>