<resources>

    <style name="Base.Theme.MetalacScannerApp" parent="Theme.Material3.Light.NoActionBar">

    </style>

    <style name="ScannerReaderButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">16dp</item>
        <item name="elevation">12dp</item>
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.MetalacScannerApp" parent="Base.Theme.MetalacScannerApp" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SpinnerDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_color</item>
    </style>

    <style name="DialogWithCorners" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowFixedWidthMinor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textColorPrimary">@color/dark_gray_text</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="DialogContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxWidth">@dimen/dialog_max_width</item>
        <item name="android:minWidth">@dimen/dialog_min_width</item>
        <item name="android:padding">@dimen/padding_extra_large</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/dark_gray_text</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="OptionDialogButtonStyle" parent="PositiveButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_normal</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingHorizontal">@dimen/margin_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.MaterialComponents">
        <item name="theme">@style/CheckBoxTheme</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/check_box_label_color</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:checked">true</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="TextInputAutoClearStyle" parent="TextInputStyle">
        <item name="endIconDrawable">@drawable/baseline_clear_24</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/main_color</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="hintTextColor">@color/main_color</item>
    </style>

    <style name="CheckBoxLabelStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/check_box_label_color</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_dialog_colored</item>
    </style>

    <style name="TextInputEditStyle" parent="@style/ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_small</item>
        <item name="android:autoSizeMinTextSize">@dimen/text_size_extra_small</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="TextInputNonEditStyle" parent="@style/ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_small</item>
        <item name="android:autoSizeMinTextSize">@dimen/text_size_extra_small</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="InfoTextViewStyle" parent="@style/ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/button_text_size_medium</item>
    </style>

    <style name="LabelTextViewStyle" parent="@style/ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/button_text_size_medium</item>
    </style>
</resources>